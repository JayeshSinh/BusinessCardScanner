<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="Groupname"
            type="com.business.card.scanner.maker.model.Group_tab" />
    </data>

    <RelativeLayout
        xmlns:aapt="http://schemas.android.com/aapt"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bkg_edit"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:tag="layout/item_group_0">

        <TextView
            android:id="@+id/txtGrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@+id/txtGrpCount"
            android:fontFamily="@font/firasans_medium"
            android:singleLine="true"
            android:text="@{Groupname.group_tb.group_name}"
            android:textColor="@color/toolbar"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGrpCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:text=""

            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/fontcolor_gray"
            android:textStyle="bold" />
    </RelativeLayout>

</layout>

